{
    "plugins": [
      "stylelint-selector-bem-pattern"
    ],
    "rules": {
        "alpha-value-notation": "number"
      },
      "overrides": [
        {
          "files": ["*.scss", "**/*.scss"],
          "customSyntax": "postcss-scss"
        },
        {
          "files": ["components/**/*.css", "pages/**/*.css"],
          "rules": {
            "alpha-value-notation": "percentage"
          }
        }
    ]
  }